{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "incremental": false,
    "composite": false,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": false,
    "jsx": "react-jsx"
  },
  "include": ["src/lib/**/*", "src/cli/**/*"],
  "exclude": ["node_modules", "dist", ".next", "src/app"]
} 